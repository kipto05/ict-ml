# Application
APP_NAME=ICT ML Trading Bot
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
SECRET_KEY=your-secret-key-change-this-in-production

# MT5 Configuration
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_broker_server
MT5_PATH=/path/to/terminal64.exe  # Windows
# MT5_PATH=/Applications/MetaTrader 5.app/Contents/MacOS/MetaTrader 5  # Mac

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ict_trading_bot
DB_USER=postgres
DB_PASSWORD=your_db_password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ML Configuration
ML_MODEL_PATH=models/saved_models
ML_CHECKPOINT_PATH=models/checkpoints
MLFLOW_TRACKING_URI=http://localhost:5000

# Risk Management
DEFAULT_RISK_PERCENT=1.0
MAX_DAILY_LOSS_PERCENT=5.0
MAX_WEEKLY_LOSS_PERCENT=10.0
MAX_CONCURRENT_TRADES=3

# Trading
DEFAULT_SYMBOLS=EURUSD,GBPUSD,USDJPY
DEFAULT_TIMEFRAME=H1
KILLZONE_ONLY=True

# Backtesting
BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_BALANCE=10000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Email Alerts (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
ALERT_EMAIL=alerts@yourdomain.com

# Telegram Alerts (Optional)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
